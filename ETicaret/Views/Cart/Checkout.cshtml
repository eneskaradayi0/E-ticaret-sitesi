@model ETicaret.Models.ShippingDetails
@{
    ViewBag.Title = "Checkout";
}


<style>
    .field-validation-error { @*hata kırmızı*@
        color: #f00;
    }

    .field-validation-valid {
        display: none;
    }

    .input-validation-error { @*kenarlıklar kırmızı arka plan turuncu*@
        border: 1px solid #f00;
        background-color: #fee;
    }

    .validation-summary-errors { @*kalın yazar,rengi kırmızı yapar*@
        font-weight: bold;
        color: #f00;
    }

    .validation-summary-valid { @*gizler*@
        display: none;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <p>Lütfen sipariş bilgilerinizi doldurunuz.</p>
            <hr />

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
            <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" }) @*metin kutusu oluşturur v user name atar*@
              </div>
            <div class="col-sm-6">
                <span class="badge-danger">

                </span>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Adres Tanımı</label>@*metin kutusu oluşturur v user name atar*@
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.AdresBasligi, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Adres</label>@*metin kutusu oluşturur v user name atar*@
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Şehir</label>@*metin kutusu oluşturur v user name atar*@
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.Sehir, new { @class = "form-control" })
            </div>
        </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Semt</label> @*metin kutusu oluşturur v user name atar*@
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Semt, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Mahalle</label>   @*metin kutusu oluşturur v user name atar*@
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.Mahalle, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Posta Kodu</label>  @*metin kutusu oluşturur v user name atar*@
                    <div class="col-sm-6">
                        @Html.TextBoxFor(x => x.PostaKodu, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label"></label> @*metin kutusu oluşturur v user name atar*@
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-primary">Gönder</button> @*buton oluşturur*@
                    </div>
                </div>

            }

        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>