﻿@model IEnumerable<ETicaret.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bilgileriniz</h2>
            <hr />

            <table class="table table-bordered table-striped"> @*striped çizgi ekler*@
                <thead>
                    <tr>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Tarihi</th>
                        <th>Toplam</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>@*her siparişe bir satır ekler*@
                            <td>@item.OrderNumber</td>@*sipariş numarası*@
                            <td>@item.OrderDate.ToShortDateString()</td>
                            <td>
                                <i class="fa fa-try" aria-hidden="true"></i>
                                @item.Total
                            </td>
                            <td>@item.OrderState</td>@*sipariş durumu*@
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = @item.Id }, new { @class = "btn btn-primary" })@*ıd ve details alır ıtemıd ekler*@
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>
